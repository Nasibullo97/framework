<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ZipRecruiter Test Suite" parallel="methods" thread-count="3">
    
    <!-- Test Parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="https://www.ziprecruiter.com"/>
    <parameter name="implicitWait" value="10"/>
    <parameter name="pageLoadTimeout" value="30"/>
    
    <!-- Smoke Test Suite -->
    <test name="Smoke Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestSuite"/>
            <class name="com.ziprecruiter.tests.TestConfiguration"/>
        </classes>
    </test>
    
    <!-- Regression Test Suite -->
    <test name="Regression Tests" parallel="methods" thread-count="3">
        <groups>
            <run>
                <include name="regression"/>
                <exclude name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.HomePageTest"/>
            <class name="com.ziprecruiter.tests.LoginTest"/>
            <class name="com.ziprecruiter.tests.RegistrationTest"/>
            <class name="com.ziprecruiter.tests.ProfileTest"/>
            <class name="com.ziprecruiter.tests.JobDetailsTest"/>
            <class name="com.ziprecruiter.tests.ApplicationFlowTest"/>
            <class name="com.ziprecruiter.tests.SavedJobsTest"/>
            <class name="com.ziprecruiter.tests.NotificationsTest"/>
            <class name="com.ziprecruiter.tests.FiltersTest"/>
            <class name="com.ziprecruiter.tests.PaginationTest"/>
            <class name="com.ziprecruiter.tests.AccessibilityTest"/>
        </classes>
    </test>
    
    <!-- Integration Test Suite -->
    <test name="Integration Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="integration"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.IntegrationTests"/>
        </classes>
    </test>
    
    <!-- Negative Test Suite -->
    <test name="Negative Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.NegativeTestCases"/>
        </classes>
    </test>
    
    <!-- Edge Case Test Suite -->
    <test name="Edge Case Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="edge"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.EdgeCaseTests"/>
        </classes>
    </test>
    
    <!-- Performance Test Suite -->
    <test name="Performance Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="performance"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.EdgeCaseTests"/>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
        </classes>
    </test>
    
    <!-- Security Test Suite -->
    <test name="Security Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="security"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.NegativeTestCases"/>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Browser Compatibility Test Suite -->
    <test name="Browser Compatibility Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="browser-compatibility"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
        </classes>
    </test>
    
    <!-- Accessibility Test Suite -->
    <test name="Accessibility Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="accessibility"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.AccessibilityTest"/>
            <class name="com.ziprecruiter.tests.IntegrationTests"/>
        </classes>
    </test>
    
    <!-- Data-Driven Test Suite -->
    <test name="Data-Driven Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="data-driven"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Parallel Execution Test Suite -->
    <test name="Parallel Execution Tests" parallel="methods" thread-count="3">
        <groups>
            <run>
                <include name="parallel"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.ParallelTestExecution"/>
        </classes>
    </test>
    
    <!-- Configuration Test Suite -->
    <test name="Configuration Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="configuration"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestConfiguration"/>
        </classes>
    </test>
    
    <!-- Summary and Reporting Test Suite -->
    <test name="Summary and Reporting Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="summary"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
        </classes>
    </test>
    
    <!-- Quick Test Suite for CI/CD -->
    <test name="Quick Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="quick"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Full Test Suite -->
    <test name="Full Test Suite" parallel="methods" thread-count="3">
        <groups>
            <run>
                <include name="full"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
            <class name="com.ziprecruiter.tests.TestSuite"/>
        </classes>
    </test>
    
    <!-- Production Test Suite -->
    <test name="Production Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="production"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Load Test Suite -->
    <test name="Load Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="load"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.EdgeCaseTests"/>
            <class name="com.ziprecruiter.tests.ParallelTestExecution"/>
        </classes>
    </test>
    
    <!-- Mobile Test Suite -->
    <test name="Mobile Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="mobile"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- API Test Suite -->
    <test name="API Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
            <class name="com.ziprecruiter.tests.IntegrationTests"/>
        </classes>
    </test>
    
    <!-- Stress Test Suite -->
    <test name="Stress Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="stress"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.EdgeCaseTests"/>
            <class name="com.ziprecruiter.tests.ParallelTestExecution"/>
        </classes>
    </test>
    
    <!-- Monitoring Test Suite -->
    <test name="Monitoring Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="monitoring"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
        </classes>
    </test>
    
    <!-- Penetration Test Suite -->
    <test name="Penetration Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="penetration"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.NegativeTestCases"/>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Compliance Test Suite -->
    <test name="Compliance Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="compliance"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.AccessibilityTest"/>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Responsive Test Suite -->
    <test name="Responsive Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="responsive"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestRunner"/>
        </classes>
    </test>
    
    <!-- Health Check Test Suite -->
    <test name="Health Check Tests" parallel="methods" thread-count="1">
        <groups>
            <run>
                <include name="health"/>
            </run>
        </groups>
        <classes>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
        </classes>
    </test>
    
    <!-- All Tests Suite -->
    <test name="All Tests" parallel="methods" thread-count="3">
        <classes>
            <class name="com.ziprecruiter.tests.HomePageTest"/>
            <class name="com.ziprecruiter.tests.LoginTest"/>
            <class name="com.ziprecruiter.tests.RegistrationTest"/>
            <class name="com.ziprecruiter.tests.ProfileTest"/>
            <class name="com.ziprecruiter.tests.JobDetailsTest"/>
            <class name="com.ziprecruiter.tests.ApplicationFlowTest"/>
            <class name="com.ziprecruiter.tests.SavedJobsTest"/>
            <class name="com.ziprecruiter.tests.NotificationsTest"/>
            <class name="com.ziprecruiter.tests.FiltersTest"/>
            <class name="com.ziprecruiter.tests.PaginationTest"/>
            <class name="com.ziprecruiter.tests.AccessibilityTest"/>
            <class name="com.ziprecruiter.tests.IntegrationTests"/>
            <class name="com.ziprecruiter.tests.NegativeTestCases"/>
            <class name="com.ziprecruiter.tests.EdgeCaseTests"/>
            <class name="com.ziprecruiter.tests.ParallelTestExecution"/>
            <class name="com.ziprecruiter.tests.TestConfiguration"/>
            <class name="com.ziprecruiter.tests.TestExecutionSummary"/>
            <class name="com.ziprecruiter.tests.TestRunner"/>
            <class name="com.ziprecruiter.tests.TestSuite"/>
        </classes>
    </test>
    
</suite> 